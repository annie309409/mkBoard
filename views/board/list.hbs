{{#section 'css'}}
    <style>
        table{
            border-spacing: 0px;
            width: 80%;
            margin: 0 auto;

        }
        tr:nth-child(even){
            background-color: #eee;
        }
        thead tr:nth-of-type(2){
            background-color: #777;
            color: #fff;
        }
        td,th{
            border-left:1px solid #ccc;
            border-top:1px solid #ccc;
            line-height: 40px;
            text-align: center;


        }
        td:nth-of-type(2),th:nth-of-type(2){
            width: 50%;
            height: 40px;

        }
        td:nth-of-type(2) a{
            width: 100%;
            height: 40px;
            overflow: hidden;
            word-break: break-word;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
        }
        td:last-child, th:last-child{
            border-right:1px solid #ccc;
        }
        tr:last-child td{
            border-bottom:1px solid #ccc;
        }
        thead tr:nth-of-type(1) th{
            border: none;
            text-align: right;
        }
        thead tr:nth-of-type(1) th button{
            cursor: pointer;
        }
        section ul{
            width: 70%;
            margin: 40px auto 0;
        }
        section ul::after{
            content: '';
            display: block;
            clear: both;
        }
        section ul li{
            float: left;
            width: calc(100% / 12);
            cursor: pointer;
            text-align: center;
            line-height: 30px;
        }
        section ul li.btn{
            background-color: #eeeeee;
            border-radius: 10px;
            box-shadow: 1px 1px 2px #222;
        }
        a.now{
            color: red !important;
            text-decoration: none;
        }
        
    </style>
    {{/section}}

    {{#section 'script'}}
        <script>
            let search = document.querySelector('.srhBtn');
            let ftype = document.querySelector('#ftype');
            let fkey = document.querySelector('#fkey');
            search?.addEventListener('click', ()=>{
                if (fkey.value) { 
                    let qry = '?ftype=' + ftype.value + '&fkey=' + fkey.value;
                    location.href = '/board/list' + qry;
                }
            });
       
        </script>
    {{/section}}

    <div class="cntWrap">
        <div class="content">
            <header>
                <h2>게시판</h2>
            </header>
            <section>
                <table>
                    <thead>
                        <tr>
                            <th colspan="3">
                                <select name="ftype" id="ftype">
                                    <option value="title">제목</option>
                                    <option value="writer">글쓴이</option>
                                    <option value="contents">내용</option>
                                </select>
                                <input type="text" name="fkey" id="fkey">
                                <button type="button" class="srhBtn">검색하기</button>
                            </th>
                            <th colspan="2">
                                <button onclick="location.href='/board/write'">새글쓰기</button>
                            </th>
                        </tr>
                        <tr>
                            <th>번호</th>
                            <th>제목</th>
                            <th>작성자</th>
                            <th>작성일</th>
                            <th>조회</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#board}}
                        <tr>
                            <td>{{brno2}}</td>
                            <td><a href="/board/view?brno={{brno}}&hits={{hits}}&wt={{writer}}">{{title}}  [{{reply}}]</a></td>
                            <td>{{writer}}</td>
                            <td>{{regdate}}</td>
                            <td>{{hits}}</td>
                        </tr>
                        {{/board}}
                    </tbody>
                </table>
                <ul>
                    
                    {{#pnbtn}}
                        {{#isprev}}<li class="btn"><a href="?crp={{prev}}{{qry}}">이전</a></li>{{/isprev}}
                        {{#isprev10}}<li class="btn"><a href="?crp={{prev10}}{{qry}}">이전10</a></li>{{/isprev10}}
                    {{/pnbtn}}
                    {{#pgs}}
                        <li><a {{#if iscpg}}class="now"{{/if}} href="?crp={{num}}{{../qry}}">{{num}}</a></li>
                    {{/pgs}}
                    {{#pnbtn}}
                        {{#isnext}}<li class="btn"><a href="?crp={{next}}{{qry}}">다음</a></li>{{/isnext}}
                        {{#isnext10}}<li class="btn"><a href="?crp={{next10}}{{qry}}">다음10</a></li>{{/isnext10}}
                    {{/pnbtn}}
                </ul>

            </section>
        </div>
    </div>
