{{#section 'css'}}
  <style>
    form{
      width: 80%;
      margin: 0 auto;
    }
    form div{
      margin-top: 10px;
    }
    form div label{
      display: inline-block;
      width: 15%;
      text-align: right;
      float: left;
    }
    form div label+input, form div label+textarea{
      margin-left: 20px;
      width: 70%;
    }
    form div label+textarea{
      height: 250px;
    }
    form div button:nth-of-type(1){
      margin-left: calc(15% + 20px);
    }
    from div:nth-of-type(3) label{
      margin-top: -200px;
    }
    #hidden{
      display: none;
    }

  </style>
{{/section}}
  {{#board}}
  <div class="cntWrap">
    <div class="content">
      <header>
        <h2>글 수정하기</h2>
      </header>
      <section>
        <form name="writefrm">
          <div class="hidden">
            <input type="text" name ="brno" value="{{brno}}">
          </div>
          <div class="clearfix">
            <label for="title">제목</label>
            <input type="text" name="title" id="title" value="{{title}}">
          </div>
          <div class="clearfix">
            <label for="newid">작성자</label>
            <input type="text" value="{{writer}}" name="newid" id="newid" readonly>
          </div>
          <div class="clearfix">
            <label for="viewnote">본문</label>
            <textarea  name="viewnote" id="viewnote">{{note}}</textarea>
          </div>
          <div>
            <button type="submit">입력완료</button>
            <button type="reset">다시입력</button>
          </div>
        </form>
      </section>
    </div>
  </div>
  {{/board}}
{{#section 'script'}}
    <script>
        let btn  = document.querySelector('button');
        let frm  = document.writefrm;

        btn.addEventListener('click',()=>{
            if(frm.title==='') alert('글 제목이 없습니다.');
            else if(frm.viewnote ==='') alert('글 내용이 없습니다');
            else{
                frm.method = 'get';
                frm.submit();
            }
        });
    </script>
{{/section}}