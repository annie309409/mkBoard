{{#section 'css'}}
    <style>
        section{
            width: 50%;
            margin: 0 auto;
        }
        form div{
            margin-top: 10px;
        }
        form div label{
            display: inline-block;
            width: 30%;
            text-align: right;
        }
        form div label+input{
            margin-left: 20px;
            display: inline-block;
            width: 50%;
        }
        form button{
            margin-left: calc(30% + 20px);
            cursor: pointer;
        }
        form button:last-child{
            margin-left: 0;
        }
    </style>
{{/section}}
    <div class="cntWrap">
        <div class="content">
            <header>
                <h2>회원가입</h2>
            </header>
            <section>
                <form name="join">
                    <div>
                        <label for="userid">아이디</label><input type="text" id="userid" name="joinID">
                    </div>
                    <div>
                        <label for="userpw">비밀번호</label><input type="password" id="userpw" name="joinPW">
                    </div>
                    <div>
                        <label for="userpwCh">비밀번호 확인</label><input type="password" id="userpwCh" name="joinPWCh">
                    </div>
                    <div>
                        <label for="username">이름</label><input type="text" id="username" name="username">
                    </div>
                    <div>
                        <label for="email">이메일</label><input type="text" id="email" name="email">
                    </div>
                    <div class="btns">
                        <button type="submit">입력완료</button>
                        <button type="reset">다시입력</button>
                    </div>
                </form>
            </section>
        </div>
    </div>

    {{#section 'script'}}
      <script src="/js/join.js"></script>
    {{/section}}